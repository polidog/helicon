{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "user name."
    },
    "age": {
      "type": "integer",
      "description": "Age in years which must be equal to or greater than zero."
    },
    "weight": {
      "type": "number"
    }
  }
}
